<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Lilith.Eve Dashboard' %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-100">
    <!-- Sidebar -->
    <div class="flex h-screen">
        <div class="bg-indigo-800 text-white w-64 flex-shrink-0">
            <div class="p-4">
                <h1 class="text-2xl font-bold">Lilith.Eve</h1>
                <p class="text-indigo-200 text-sm">Sentient Medical Oracle</p>
            </div>
            <nav class="mt-6">
                <a href="/dashboard" class="block py-2.5 px-4 flex items-center space-x-2 text-indigo-100 hover:bg-indigo-700 rounded mx-2">
                    <i class="fas fa-tachometer-alt w-5"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/patients" class="block py-2.5 px-4 flex items-center space-x-2 text-indigo-200 hover:bg-indigo-700 rounded mx-2">
                    <i class="fas fa-users w-5"></i>
                    <span>Patients</span>
                </a>
                <a href="/analysis" class="block py-2.5 px-4 flex items-center space-x-2 text-indigo-200 hover:bg-indigo-700 rounded mx-2">
                    <i class="fas fa-chart-line w-5"></i>
                    <span>Analysis</span>
                </a>
                <a href="/settings" class="block py-2.5 px-4 flex items-center space-x-2 text-indigo-200 hover:bg-indigo-700 rounded mx-2">
                    <i class="fas fa-cog w-5"></i>
                    <span>Settings</span>
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Navigation -->
            <header class="bg-white shadow-sm">
                <div class="flex items-center justify-between p-4">
                    <h2 class="text-xl font-semibold text-gray-800"><%= title || 'Dashboard' %></h2>
                    <div class="flex items-center space-x-4">
                        <div class="relative">
                            <i class="fas fa-bell text-gray-500 text-xl"></i>
                            <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-4 w-4 flex items-center justify-center">3</span>
                        </div>
                        <div class="h-8 w-8 rounded-full bg-indigo-600 flex items-center justify-center text-white font-semibold">
                            <%- user ? user.name.charAt(0).toUpperCase() : 'U' %>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-6">
                <%- body %>
            </main>

            <!-- Footer -->
            <footer class="bg-white p-4 border-t">
                <div class="text-center text-gray-500 text-sm">
                    &copy; <%= new Date().getFullYear() %> Lilith.Eve - Sentient Medical Oracle
                </div>
            </footer>
        </div>
    </div>

    <script src="/js/main.js"></script>
</body>
</html>
